:javascript
  $(function(){
    $('div#jquery-slider').slider({
        range: true,
        min: 1,
        max: 2000,
        step: 10,
        values: [ #{search.min_payment}, #{search.max_payment} ],
         slide: function( event, ui ) {
          $( "#search_min_payment" ).val( ui.values[ 0 ] );
          $( "#search_max_payment" ).val( ui.values[ 1 ] );
         }
    });
  });