%tr.house{ :id => "house_#{house.id}" }
  %td= image_tag house.image_url, :size => '160x120'
  %td
    %table
      %tr
        %td{ :colspan => 3 }
          %b= house.title
      %tr
        %td{ :colspan => 3 }= house.description if house.description
      %tr
        %td= "Price: #{number_to_currency(house.price, :unit => '€', :precision => 0)}"
        %td= "Actual Monthly Payment Required: #{number_to_currency(-@search.pmt_at(house.price), :unit => '€')}" if @search
        %td= link_to "View on Daft.ie", "http://www.daft.ie/#{house.daft_url}"
        %td= link_to 'Show', house
        -#%td= link_to 'Edit', edit_house_path(house)
        -#%td= link_to 'Destroy', house, :confirm => 'Are you sure?', :method => :delete
      %tr
        %td.bottom{ :colspan => 5 }

