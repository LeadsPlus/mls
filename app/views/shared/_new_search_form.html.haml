      %span.field
        -#=f.label :min_payment, "Min Payment (€)"
        =f.text_field :min_payment, :value => @search.min_payment, :size => 6

      %span.field
        -#=f.label :max_payment, "Max Payment (€)"
        =f.text_field :max_payment, :value => @search.max_payment, :size => 6

