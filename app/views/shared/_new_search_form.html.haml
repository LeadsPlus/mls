=form_for Search.new do |f|
  -#=render 'shared/error_messages', :object => f.object
  #other_fields
    %span.field
      =f.label :deposit, "Deposit (€)"
      =f.text_field :deposit, :value => @search.deposit, :size => 6

    %span.field
      =f.label :term, "Term (years)"
      =f.text_field :term, :value => @search.term, :size => 3

    %span.field
      =f.label :county
      =f.select :county, county_choices, :selected => @search.county

    =f.submit :Search

