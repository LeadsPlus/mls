<li class="listing" id="house_<%= house.id %>">
	<%= image_tag house.image_url, size: '160x120' %>
	<div class="house_details">
		<h3><%= house.title %></h3>
		<p><%= house.description if house.description %></p>
	</div>
	<div class="summary">
    <span class="price">
      <%= number_to_currency(house.price, unit: 'â‚¬', precision: 0) %>
    </span>
    <span class="payment_frequency">/ month</span>
    <ul>
      <li><b>Bedrooms:</b> <%= house.bedrooms ? house.bedrooms : (1 + rand(5)) %></li>
      <li><b>Bathrooms:</b> <%= house.bathrooms ? house.bathrooms : (1 + rand(3)) %></li>
    </ul>
    <div class="spacer"></div>
    <%= link_to "contact owner", house.daft_url, class: "button daft_btn corners" %>
    <%= link_to "more info", house_path(house), class: "button grey_btn corners" %>
  </div>
  <div class="spacer"></div>
</li>

